{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Debug",
			"type": "shell",
			"command": "python",
			"args": [
				"build.py",
				"--debug",
				// "--fresh-build"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"clear": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"detail": "Build the Manganese compiler in debug mode"
		},
		{
			"label": "Build Release",
			"type": "shell",
			"command": "python",
			"args": [
				"build.py",
				// "--fresh-build"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"clear": true
			},
			"problemMatcher": [
				"$gcc" //! Ensure that the problem matcher matches your compiler output
			],
			"detail": "Build the Manganese compiler in release mode"
		},
		{
			"label": "Build Tests",
			"type": "shell",
			"command": "python",
			"args": [
				"build.py",
				"--tests",
				// "--fresh-build"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"clear": true
			},
			"problemMatcher": [
				"$gcc" //! Ensure that the problem matcher matches your compiler output
			],
			"detail": "Build the Manganese test suite (always in debug mode)"
		},
	]
}